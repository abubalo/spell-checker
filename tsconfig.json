{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": "./", 
    "paths": {
      "@/*": ["src/*"] // Define the "@" path alias to point to "src/*"
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
